<body>

  <header class="header">
      <!--here comes the header -->
      <h1 class="title">Riding with Class</h1>
      <nav class="navbar">
          <li class="nav-item"><%= link_to "Subscribe", new_passenger_path %></li>
          <li class="nav-item"><%= link_to "Rides", root_path %></li>


      </nav>
  </header>


<h2 class="page-title"><%= @car.name %></h2>





<p>capacity: <%= @car.capacity %></p>
<p>destination: <%= @car.destination %></p>



<h2 class="page-title">Passengers in this car:</h2>

<% if @car.passengers.any? %>
  <ul>
    <% @car.passengers.each do |passenger| %>
      <li><%= passenger.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no passengers in this car.</p>
<% end %>

