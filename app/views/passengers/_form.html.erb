<%= form_for @passenger do |f| %>

   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :age %>
   <%= f.number_field :age %>

   <%= f.label :gender %>
   <%= f.text_field :gender %>

   <%= f.label :car_id %>
   <%= f.collection_select(:car_id, Car.all, :id, :name) %>

   <%= f.submit (@passenger.new_record? ? "Create" : "Update") %>
<% end %>
